Sub ListerFeuillesSource()
    Dim cfgWS    As Worksheet
    Dim wb       As Workbook
    Dim p        As String, msg As String
    On Error Resume Next
    Set cfgWS = ThisWorkbook.Sheets("programme")
    On Error GoTo 0
    If cfgWS Is Nothing Then
        MsgBox "Feuille 'programme' introuvable dans ce classeur.", vbExclamation
        Exit Sub
    End If
    p = cfgWS.Range("B3").Value  ' Chemin du source
    If Dir(p) = "" Then
        MsgBox "Fichier introuvable : " & p, vbExclamation
        Exit Sub
    End If
    Set wb = Workbooks.Open(p, ReadOnly:=True)
    For Each ws In wb.Sheets
        msg = msg & "Â· " & ws.Name & vbCrLf
    Next
    wb.Close False
    MsgBox "Feuilles dans le classeur source :" & vbCrLf & msg, vbInformation
End Sub
